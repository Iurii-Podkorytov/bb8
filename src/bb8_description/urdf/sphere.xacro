<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Dummy links for rotational joints -->
  <link name="link_yaw">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <link name="link_pitch">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Outer Sphere Link -->
  <link name="sphere_link">
    <visual>
      <geometry>
        <mesh filename="file:///$(find bb8_description)/meshes/sphere.stl"/>
      </geometry>
      <material name="white_transparent">
        <color rgba="1 1 1 0.2"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="file:///$(find bb8_description)/meshes/sphere.stl"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.2" iyy="0.2" izz="0.2" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- Continuous joints -->
  <joint name="yaw_joint" type="continuous">
    <parent link="sphere_center"/>
    <child link="link_yaw"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="pitch_joint" type="continuous">
    <parent link="link_yaw"/>
    <child link="link_pitch"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="roll_joint" type="continuous">
    <parent link="link_pitch"/>
    <child link="sphere_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="sphere_link">
    <mu>10.0</mu>
    <mu2>10.0</mu2>
    <self_collide>false</self_collide>
    <surface>
      <contact>
        <ode>
          <min_depth>1</min_depth> 
          <margin>1</margin>
        </ode>
        <stiffness>1e-10</stiffness>
        <damping>1e10</damping>
      </contact>
    </surface>
  </gazebo>

</robot>